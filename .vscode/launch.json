{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Debug 2D Game",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/build/bin/2DGameTemplate", // Adjust binary path if needed
        "args": [],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}",
        "environment": [],
        "externalConsole": false,
        "MIMode": "gdb",
        "setupCommands": [
          {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
        ],
        "preLaunchTask": "build",
        "miDebuggerPath": "/usr/bin/gdb"
      }
    ]
  }
  